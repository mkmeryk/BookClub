<div style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;">



    <br>
    <% @books.each do |book| %>
        <div class="card">
            <div class="card-body">
                <img style="width:200px" class="p-3 rounded float-start" src='<%= book.image_url %>' alt=''>
                <div class="flex-grow-1 p-3 align-self-center">
                    <div>
                        <h2><%= link_to book.title, book_path(book) %></h2>
                    </div>
                    <div>
                        <p><%= book.introduction %></p>
                    </div>
                    <div class="d-flex">
                        <p> <%= book.genre %> </p>
                        &nbsp; |&nbsp; 
                        <p> <%= book.user.full_name %> </p>
                        &nbsp; |&nbsp; 
                        <p><small>Created at: <%= time_ago_in_words(book.created_at) %></small></p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="d-flex">
                            <h2 class="p-2"><%= book.avg_rating %> &#9733; </h2> 
                        </div>
                        <br>
                    </div>
                </div>
            </div>
        </div>
        <br>
    <% end %>
</div>

