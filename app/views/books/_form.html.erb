<% if @book.errors.any? %>
    <ul>
        <% @book.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @book, url: books_path ) do |form| %>
    <div>
        <%= form.label :title %>
        <br>
        <%= form.text_field :title ,class:"form-control" %>
    </div>
    
    <div>
        <%= form.label :image_url %>
        <br>
        <%= form.text_field :image_url ,class:"form-control" %>
    </div>
    <div>
        <%= form.label :introduction %>
        <br>
        <%= form.text_area :introduction, cols: 50, rows: 5 ,class:"form-control" %>
    </div>
    
    <div>
        <%= form.label :genre %>
        <br>
        <%= form.text_field :genre ,class:"form-control" %>
    </div>
    <br>
 
    <%= form.submit "Add Book", class:"btn btn-primary" %>
<% end %>
